<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/function_btn</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">@color/light_blue</item>
        <item name="strokeColor">@color/btn_border_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefaultStyle.numbs">
        <item name="android:backgroundTint">@color/number_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultStyle.result">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultStyle.V2">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#4DFB0000</item>
        <item name="rippleColor">#4DF44336</item>
        <item name="strokeColor">#2E3F51B5</item>
    </style>

    <style name="DefaultStyle.numbs.V2">
        <item name="android:backgroundTint">#4D27FF00</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="DefaultStyle.result.V2">
        <item name="android:backgroundTint">#4DFFFFFF</item>
        <item name="android:textColor">#002AFF</item>
    </style>

    <style name="DefaultStyle.V3">
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#4DFFFFFF</item>
        <item name="rippleColor">#4D777777</item>
        <item name="strokeColor">#2E3F51B5</item>
    </style>

    <style name="DefaultStyle.numbs.V3">
        <item name="android:backgroundTint">#4D000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DefaultStyle.result.V3">
        <item name="android:backgroundTint">#4D858585</item>
        <item name="android:textColor">#002AFF</item>
    </style>

</resources>